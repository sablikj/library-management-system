    @{
    if (Model != null && Model.CarouselItem != null && Model.CarouselItem.Count > 0)
        {
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                    @{
                    for (int i = 0; i < Model.CarouselItem.Count; i++)
                        {
                        if (i == 0)
                            {
                            <li data-target="#carousel" data-slide-to="@i" class="active"></li>
                        }
                        else
                            {
                            <li data-target="#carousel" href="/Product/Detail/@Model.CarouselItem[i].ID" data-slide-to="@i"></li>
                    }
                }
            }

            </ol>
            <div class="carousel-inner">
                    @{
                    for (int i = 0; i < Model.CarouselItem.Count; i++)
                        {
                        if (i == 0)
                            {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@Model.CarouselItem[i].ImageSource" alt="@Model.CarouselItem[i].ImageAlt">
                        </div>
                        }
                        else
                            {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Model.CarouselItem[i].ImageSource" alt="@Model.CarouselItem[i].ImageAlt">
                        </div>
                    }
                }
            }
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
        </a>
    </div>
    }
}

