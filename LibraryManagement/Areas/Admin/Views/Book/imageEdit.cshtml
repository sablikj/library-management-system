@model LibraryManagement.Areas.Admin.Models.ViewModels.imageEditViewModel

@{
    ViewData["Title"] = "imageEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
    {
    <link rel="stylesheet" href="~/css/login.css" />
}

<div id="logreg-forms" style="border-radius: .75rem">
    <form asp-action="imageEdit" method="post" enctype="multipart/form-data" class="form-signup bg-white shadow" style="border-radius: .75rem">
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Edit book cover</h1>
        <hr>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="p-1 mb-2 bg-danger text-black">@ViewBag.ErrorMessage</div>
        }

        <div class="form-group">
            <label asp-for="Image">Image</label>
            <input type="file" asp-for="Image" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" accept="image/*">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageAlt" class="control-label"></label>
            <input asp-for="ImageAlt" class="form-control" />
            <span asp-validation-for="ImageAlt" class="text-danger"></span>
        </div>     
        <div class="row">
            <div class="col p-2 text-center">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>


@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


